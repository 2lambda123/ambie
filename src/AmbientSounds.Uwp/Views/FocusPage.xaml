<Page
    x:Class="AmbientSounds.Views.FocusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Margin="0,0,16,0">
                <Border
                    Height="400"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Rectangle
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <StackPanel Padding="12,0,12,0">
                            <TextBlock
                                Margin="12,12,0,0"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="What's the plan?" />
                            <Rectangle
                                Height="1"
                                Margin="-12,12,-12,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <TextBlock
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Focus length" />
                            <Slider
                                Margin="12,4,12,0"
                                HorizontalAlignment="Stretch"
                                Maximum="60"
                                StepFrequency="5"
                                TickFrequency="15"
                                TickPlacement="TopLeft" />

                            <TextBlock
                                x:Name="BreakLength"
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Break length" />
                            <Slider
                                Margin="12,4,12,0"
                                HorizontalAlignment="Stretch"
                                AutomationProperties.LabeledBy="{x:Bind BreakLength}"
                                Maximum="60"
                                StepFrequency="5"
                                TickFrequency="15"
                                TickPlacement="TopLeft" />

                            <TextBlock
                                x:Name="Repeats"
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Repetitions" />
                            <Slider
                                Margin="12,4,12,0"
                                HorizontalAlignment="Stretch"
                                AutomationProperties.LabeledBy="{x:Bind Repeats}"
                                Maximum="8"
                                TickFrequency="2"
                                TickPlacement="TopLeft" />

                            <TextBlock
                                Margin="0,36,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Total" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="2 hours 30 minutes" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border
                    Height="200"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Rectangle
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <StackPanel Padding="12,0,12,0">
                            <TextBlock
                                Margin="12,12,0,0"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Notepad" />
                            <Rectangle
                                Height="1"
                                Margin="-12,12,-12,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <TextBox
                                Height="130"
                                Margin="0,12,0,0"
                                AcceptsReturn="True"
                                FontFamily="Lucida Console"
                                FontSize="12"
                                PlaceholderText="A place to gather your thoughts..."
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <Grid Grid.Column="1">
            <winui:ProgressRing
                Width="300"
                Height="300"
                IsIndeterminate="False"
                Maximum="60"
                Value="59" />
            <winui:ProgressRing
                Width="244"
                Height="244"
                Foreground="Green"
                IsIndeterminate="False"
                Maximum="60"
                Value="59" />
        </Grid>
    </Grid>
</Page>
