<Page
    x:Class="AmbientSounds.Views.FocusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animations="using:Microsoft.Toolkit.Uwp.UI.Animations"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Behaviors"
    xmlns:controls="using:AmbientSounds.Controls"
    xmlns:converters="using:AmbientSounds.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:AmbientSounds.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:strings="using:AmbientSounds.Strings"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Margin="0,0,16,40">
                <Border
                    Height="400"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Rectangle
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="3"
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <TextBlock
                            Grid.ColumnSpan="3"
                            Margin="20,12"
                            VerticalAlignment="Top"
                            FontWeight="SemiBold"
                            Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                            Text="{x:Bind strings:Resources.FocusPlanningHeader}" />

                        <Rectangle
                            Grid.Row="1"
                            Grid.ColumnSpan="3"
                            Height="1"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                        <Grid
                            Grid.Row="1"
                            Grid.Column="0"
                            Width="250">
                            <controls:FocusTimer
                                Width="200"
                                Height="200"
                                FocusLengthRemaining="{x:Bind ViewModel.FocusLengthRemaining, Mode=OneWay}"
                                RepetitionsRemaining="{x:Bind ViewModel.RepetitionsRemaining, Mode=OneWay}"
                                RestLengthRemaining="{x:Bind ViewModel.RestLengthRemaining, Mode=OneWay}"
                                SecondsRemaining="{x:Bind ViewModel.SecondsRemaining, Mode=OneWay}"
                                SecondsRingVisible="{x:Bind ViewModel.SecondsRingVisible, Mode=OneWay}" />
                        </Grid>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            VerticalAlignment="Center"
                            Visibility="{x:Bind converters:VisibilityConverter.InvertBool(ViewModel.CancelVisible), Mode=OneWay}">
                            <StackPanel>
                                <TextBlock
                                    Margin="12,0,12,0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{x:Bind strings:Resources.FocusLength}" />
                                <controls:TimerSlider
                                    Margin="12,0,0,0"
                                    IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                    Maximum="60"
                                    StepFrequency="5"
                                    TickFrequency="15"
                                    Value="{x:Bind ViewModel.FocusLength, Mode=TwoWay}" />

                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.3" />
                                    <animations:TranslationAnimation
                                        From="0,40,0"
                                        To="0"
                                        Duration="0:0:0.3" />
                                </animations:Implicit.ShowAnimations>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock
                                    x:Name="BreakLength"
                                    Margin="12,24,12,0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{x:Bind strings:Resources.RestLength}" />
                                <controls:TimerSlider
                                    Margin="12,0,0,0"
                                    IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                    Maximum="60"
                                    StepFrequency="5"
                                    TickFrequency="15"
                                    Value="{x:Bind ViewModel.RestLength, Mode=TwoWay}" />
                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        Delay="0:0:0.15"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.3" />
                                    <animations:TranslationAnimation
                                        Delay="0:0:0.15"
                                        From="0,40,0"
                                        To="0"
                                        Duration="0:0:0.3" />
                                </animations:Implicit.ShowAnimations>
                            </StackPanel>

                            <StackPanel>
                                <TextBlock
                                    x:Name="Repeats"
                                    Margin="12,24,12,0"
                                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                    Text="{x:Bind strings:Resources.Repetitions}" />
                                <controls:TimerSlider
                                    Margin="12,0,0,0"
                                    IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                    Maximum="8"
                                    TickFrequency="2"
                                    Value="{x:Bind ViewModel.Repetitions, Mode=TwoWay}" />
                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        Delay="0:0:0.3"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.3" />
                                    <animations:TranslationAnimation
                                        Delay="0:0:0.3"
                                        From="0,40,0"
                                        To="0"
                                        Duration="0:0:0.3" />
                                </animations:Implicit.ShowAnimations>
                            </StackPanel>
                        </StackPanel>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            VerticalAlignment="Center"
                            Visibility="{x:Bind ViewModel.CancelVisible, Mode=OneWay}">
                            <TextBlock
                                FontSize="72"
                                FontWeight="SemiBold"
                                Text="{x:Bind ViewModel.CurrentTimeRemaining, Mode=OneWay}"
                                TextAlignment="Center">
                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        From="0"
                                        To="1"
                                        Duration="0:0:2" />
                                    <animations:TranslationAnimation
                                        From="0,-40,0"
                                        To="0"
                                        Duration="0:0:2" />
                                </animations:Implicit.ShowAnimations>
                            </TextBlock>
                            <TextBlock
                                FontSize="20"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="{x:Bind ViewModel.CurrentStatus, Mode=OneWay}"
                                TextAlignment="Center">
                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        From="0"
                                        To="1"
                                        Duration="0:0:2" />
                                    <animations:TranslationAnimation
                                        From="0,20,0"
                                        To="0"
                                        Duration="0:0:2" />
                                </animations:Implicit.ShowAnimations>
                            </TextBlock>
                        </StackPanel>

                        <Grid
                            Grid.Row="1"
                            Grid.Column="2"
                            Width="250">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Button
                                x:Name="StartButton"
                                MinWidth="140"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                AutomationProperties.Name="{x:Bind strings:Resources.StartTimer}"
                                Click="{x:Bind ViewModel.Start}"
                                IsEnabled="{x:Bind ViewModel.PlayEnabled, Mode=OneWay}"
                                Style="{ThemeResource AccentButtonStyle}"
                                Visibility="{x:Bind ViewModel.PlayVisible, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}" Glyph="&#xF5B0;" />
                                    <TextBlock Margin="8,0,0,0" Text="{x:Bind strings:Resources.Start}" />
                                </StackPanel>
                            </Button>
                            <Button
                                x:Name="PauseButton"
                                MinWidth="140"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                AutomationProperties.Name="{x:Bind strings:Resources.PauseTimer}"
                                Click="{x:Bind ViewModel.Pause}"
                                Style="{ThemeResource AccentButtonStyle}"
                                Visibility="{x:Bind ViewModel.PauseVisible, Mode=OneWay}">
                                <StackPanel Orientation="Horizontal">
                                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphPause}" />
                                    <TextBlock Margin="8,0,0,0" Text="{x:Bind strings:Resources.Pause}" />
                                </StackPanel>
                            </Button>
                            <Button
                                Grid.Row="1"
                                MinWidth="140"
                                Margin="0,4,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                AutomationProperties.Name="{x:Bind strings:Resources.ResetTimer}"
                                Canvas.ZIndex="-1"
                                Click="{x:Bind ViewModel.Stop}"
                                Content="{x:Bind strings:Resources.Reset}"
                                Style="{StaticResource SubtleButton}"
                                Visibility="{x:Bind ViewModel.CancelVisible, Mode=OneWay}">
                                <animations:Implicit.ShowAnimations>
                                    <animations:OpacityAnimation
                                        Delay="0:0:0.6"
                                        From="0"
                                        To="1"
                                        Duration="0:0:0.5" />
                                    <animations:TranslationAnimation
                                        Delay="0:0:0.6"
                                        EasingMode="EaseInOut"
                                        From="0,-40,0"
                                        To="0"
                                        Duration="0:0:0.5" />
                                </animations:Implicit.ShowAnimations>
                            </Button>
                        </Grid>
                    </Grid>
                </Border>

                <Border
                    Height="200"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Rectangle
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <StackPanel Padding="12,0,12,0">
                            <TextBlock
                                Margin="12,12,0,0"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{x:Bind strings:Resources.Notepad}" />
                            <Rectangle
                                Height="1"
                                Margin="-12,12,-12,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <TextBox
                                Height="130"
                                Margin="0,12,0,0"
                                AcceptsReturn="True"
                                FontFamily="Lucida Sans Typewriter"
                                FontSize="12"
                                MaxLength="1024"
                                PlaceholderText="{x:Bind strings:Resources.FocusNotesPlaceholder}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
