<Page
    x:Class="AmbientSounds.Views.FocusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AmbientSounds.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:winui="using:Microsoft.UI.Xaml.Controls"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ScrollViewer>
            <StackPanel Margin="0,0,16,0">
                <Border
                    Height="400"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Rectangle
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <StackPanel Padding="12,0,12,0">
                            <TextBlock
                                Margin="12,12,0,0"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="What's the plan?" />
                            <Rectangle
                                Height="1"
                                Margin="-12,12,-12,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <TextBlock
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Focus length" />

                            <controls:TimerSlider
                                Margin="12,0,0,0"
                                IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                Maximum="60"
                                StepFrequency="5"
                                TickFrequency="15"
                                Value="{x:Bind ViewModel.FocusLength, Mode=TwoWay}" />

                            <TextBlock
                                x:Name="BreakLength"
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Rest length" />

                            <controls:TimerSlider
                                Margin="12,0,0,0"
                                IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                Maximum="60"
                                StepFrequency="5"
                                TickFrequency="15"
                                Value="{x:Bind ViewModel.RestLength, Mode=TwoWay}" />

                            <TextBlock
                                x:Name="Repeats"
                                Margin="12,24,12,0"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Repetitions" />

                            <controls:TimerSlider
                                Margin="12,0,0,0"
                                IsEnabled="{x:Bind ViewModel.SlidersEnabled, Mode=OneWay}"
                                Maximum="8"
                                TickFrequency="2"
                                Value="{x:Bind ViewModel.Repetitions, Mode=TwoWay}" />

                            <TextBlock
                                Margin="0,36,0,0"
                                HorizontalAlignment="Center"
                                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                Text="Total" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="20"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="{x:Bind ViewModel.TotalTime, Mode=OneWay}" />
                        </StackPanel>
                    </Grid>
                </Border>

                <Border
                    Height="200"
                    Margin="0,4,0,0"
                    HorizontalAlignment="Stretch"
                    BorderBrush="{ThemeResource CardStrokeColorDefault}"
                    BorderThickness="1"
                    CornerRadius="8">
                    <Grid>
                        <Rectangle
                            Fill="{ThemeResource CardBackgroundFillColorDefault}"
                            RadiusX="8"
                            RadiusY="8" />

                        <StackPanel Padding="12,0,12,0">
                            <TextBlock
                                Margin="12,12,0,0"
                                FontWeight="SemiBold"
                                Foreground="{ThemeResource TextFillColorPrimaryBrush}"
                                Text="Notepad" />
                            <Rectangle
                                Height="1"
                                Margin="-12,12,-12,0"
                                HorizontalAlignment="Stretch"
                                Fill="{ThemeResource DividerStrokeColorDefaultBrush}" />

                            <TextBox
                                Height="130"
                                Margin="0,12,0,0"
                                AcceptsReturn="True"
                                FontFamily="Lucida Console"
                                FontSize="12"
                                PlaceholderText="A place to gather your thoughts..."
                                TextWrapping="Wrap" />
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <StackPanel
            Grid.Column="1"
            Margin="0,0,0,40"
            VerticalAlignment="Center">
            <Grid>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock
                        FontSize="20"
                        FontWeight="SemiBold"
                        Text="{x:Bind ViewModel.CurrentTimeRemaining, Mode=OneWay}"
                        TextAlignment="Center" />
                    <TextBlock
                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                        Text="{x:Bind ViewModel.CurrentStatus, Mode=OneWay}"
                        TextAlignment="Center" />
                </StackPanel>

                <winui:ProgressRing
                    Width="300"
                    Height="300"
                    AutomationProperties.AccessibilityView="Raw"
                    Foreground="SkyBlue"
                    IsIndeterminate="False"
                    Opacity="0.1"
                    Value="100" />
                <winui:ProgressRing
                    Width="300"
                    Height="300"
                    Foreground="SkyBlue"
                    IsIndeterminate="False"
                    Maximum="60"
                    Value="{x:Bind ViewModel.FocusLengthRemaining, Mode=OneWay}" />

                <winui:ProgressRing
                    Width="248"
                    Height="248"
                    AutomationProperties.AccessibilityView="Raw"
                    Foreground="Green"
                    IsIndeterminate="False"
                    Opacity="0.2"
                    Value="100" />
                <winui:ProgressRing
                    Width="248"
                    Height="248"
                    Foreground="Green"
                    IsIndeterminate="False"
                    Maximum="60"
                    Value="{x:Bind ViewModel.RestLengthRemaining, Mode=OneWay}" />

                <winui:ProgressRing
                    Width="204"
                    Height="204"
                    AutomationProperties.AccessibilityView="Raw"
                    Foreground="DeepPink"
                    IsIndeterminate="False"
                    Opacity="0.1"
                    Value="100" />
                <winui:ProgressRing
                    Width="204"
                    Height="204"
                    Foreground="DeepPink"
                    IsIndeterminate="False"
                    Maximum="8"
                    Value="{x:Bind ViewModel.RepetitionsRemaining, Mode=OneWay}" />
            </Grid>

            <StackPanel
                Margin="0,20,0,0"
                HorizontalAlignment="Center"
                Orientation="Horizontal"
                Spacing="4">
                <Button
                    Click="{x:Bind ViewModel.Start}"
                    Style="{StaticResource SubtleIconButton}"
                    Visibility="{x:Bind ViewModel.PlayVisible, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphPlay}" />
                </Button>
                <Button
                    Click="{x:Bind ViewModel.Pause}"
                    Style="{StaticResource SubtleIconButton}"
                    Visibility="{x:Bind ViewModel.PauseVisible, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphPause}" />
                </Button>
                <Button
                    Click="{x:Bind ViewModel.Stop}"
                    Style="{StaticResource SubtleIconButton}"
                    Visibility="{x:Bind ViewModel.CancelVisible, Mode=OneWay}">
                    <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="{StaticResource GlyphCancel}" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
