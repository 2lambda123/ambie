<UserControl
    x:Class="AmbientSounds.Controls.ActiveTrackList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:AmbientSounds.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="{x:Bind UserControl_Loaded}"
    mc:Ignorable="d">

    <ListView
        VerticalAlignment="Stretch"
        ItemsSource="{x:Bind ViewModel.ActiveTracks}"
        ScrollViewer.HorizontalScrollBarVisibility="Auto"
        ScrollViewer.HorizontalScrollMode="Enabled"
        ScrollViewer.IsHorizontalRailEnabled="True"
        SelectionMode="None">
        <ListView.ItemTemplate>
            <DataTemplate x:DataType="viewmodels:ActiveTrackViewModel">
                <Grid VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <TextBlock
                        MaxWidth="88"
                        Margin="0,8,0,0"
                        HorizontalAlignment="Left"
                        Text="{x:Bind Name}"
                        TextTrimming="CharacterEllipsis" />
                    <Slider
                        Grid.Row="1"
                        Width="120"
                        Margin="0,4,0,0"
                        Value="{x:Bind Volume, Mode=TwoWay}" />
                    <Button
                        Grid.RowSpan="2"
                        Margin="0,8,0,0"
                        Padding="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Background="Transparent"
                        Command="{x:Bind RemoveCommand}"
                        CommandParameter="{x:Bind Sound}">
                        <FontIcon
                            FontFamily="{StaticResource FluentUIGlyphs}"
                            FontSize="12"
                            Glyph="&#xE9F9;" />
                    </Button>
                </Grid>
            </DataTemplate>
        </ListView.ItemTemplate>
        <ListView.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Horizontal" />
            </ItemsPanelTemplate>
        </ListView.ItemsPanel>
    </ListView>
</UserControl>
