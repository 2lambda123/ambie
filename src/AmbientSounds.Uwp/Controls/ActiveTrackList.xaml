<UserControl
    x:Class="AmbientSounds.Controls.ActiveTrackList"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AmbientSounds.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="using:AmbientSounds.ViewModels"
    d:DesignHeight="300"
    d:DesignWidth="400"
    Loaded="{x:Bind UserControl_Loaded}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <ListView
            VerticalAlignment="Stretch"
            AutomationProperties.Name="Active sounds"
            ItemsSource="{x:Bind ViewModel.ActiveTracks}"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollMode="Enabled"
            ScrollViewer.IsHorizontalRailEnabled="True"
            SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ActiveTrackViewModel">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            MaxWidth="88"
                            Margin="0,8,0,0"
                            HorizontalAlignment="Left"
                            Text="{x:Bind Name}"
                            TextTrimming="CharacterEllipsis" />
                        <Slider
                            x:Uid="VolumeSliderSound"
                            Grid.Row="1"
                            Width="120"
                            Margin="0,4,0,0"
                            Value="{x:Bind Volume, Mode=TwoWay}" />
                        <Button
                            Grid.RowSpan="2"
                            Margin="0,8,0,0"
                            Padding="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            AutomationProperties.Name="Remove from active list"
                            Background="Transparent"
                            Command="{x:Bind RemoveCommand}"
                            CommandParameter="{x:Bind Sound}">
                            <FontIcon
                                FontFamily="{StaticResource FluentUIGlyphs}"
                                FontSize="12"
                                Glyph="&#xE9F9;" />
                        </Button>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <ListView.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ListView.ItemsPanel>
        </ListView>

        <StackPanel
            Grid.Column="1"
            Margin="12,0,0,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Button
                AutomationProperties.Name="Save custom sound mix"
                Style="{StaticResource TransparentRoundButtonStyle}"
                ToolTipService.ToolTip="Save custom sound mix"
                Visibility="{x:Bind ViewModel.CanSave, Mode=OneWay}">
                <Button.KeyboardAccelerators>
                    <KeyboardAccelerator Key="S" Modifiers="Control" />
                </Button.KeyboardAccelerators>

                <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xEB4A;" />
                <Button.Flyout>
                    <Flyout x:Name="SaveFlyout" Closed="SaveFlyout_Closed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="NameInput"
                                Width="200"
                                Header="Sound mix name"
                                KeyDown="NameInput_KeyDown"
                                MaxLength="30"
                                PlaceholderText="Optional" />
                            <Button
                                Grid.Column="1"
                                Margin="4,0,0,0"
                                VerticalAlignment="Bottom"
                                AutomationProperties.Name="Confirm save"
                                Background="Transparent"
                                Click="Button_Click"
                                Command="{x:Bind ViewModel.SaveCommand}"
                                CommandParameter="{x:Bind NameInput.Text}">
                                <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xE9A1;" />
                            </Button>
                        </Grid>
                    </Flyout>
                </Button.Flyout>
            </Button>

            <Button
                AutomationProperties.Name="Clear all active sounds"
                Command="{x:Bind ViewModel.ClearCommand}"
                Style="{StaticResource TransparentRoundButtonStyle}"
                ToolTipService.ToolTip="Clear all active sounds">
                <FontIcon FontFamily="{StaticResource FluentUIGlyphs}" Glyph="&#xE9F9;" />
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
